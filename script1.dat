#!/bin/bash

echo -n -e "veuillez entrer l'adresse ip: \t"
read ip
echo -n -e "veuillez entrer le masque: \t"
read masque
echo -n -e "resultat: \t\t\t"
for ((i=1;i<5;i++)); do {
export io$i=$(echo $ip | cut -d "." -f $i)
export mo$i=$(echo $masque | cut -d "." -f $i)
	if (( $i == 4 )); then {
	        echo $(($((io$i))&$((mo$i))))
	}
	else {
	        echo -n $(($((io$i))&$((mo$i)))).
	}
	fi
}
done

